@model UserManagement.Web.Models.Users.UserListItemViewModel

<h2>Delete User</h2>

<p class="text-danger">Are you sure you want to delete this user?</p>

<table class="table table-bordered">
	<tr>
		<th>ID</th>
		<td>@Model.Id</td>
	</tr>
	<tr>
		<th>Forename</th>
		<td>@Model.Forename</td>
	</tr>
	<tr>
		<th>Surname</th>
		<td>@Model.Surname</td>
	</tr>
	<tr>
		<th>Email</th>
		<td>@Model.Email</td>
	</tr>
	<tr>
		<th>Date of Birth</th>
		<td>@Model.DateOfBirth.ToString("dd MMM yyyy")</td>
	</tr>
	<tr>
		<th>Status</th>
		<td>
			@if (Model.IsActive)
			{
				<span class="text-success">Active</span>
			}
			else
			{
				<span class="text-danger">Inactive</span>
			}
		</td>
	</tr>
</table>

<form asp-action="Delete" asp-route-id="" method="post">
	@Html.AntiForgeryToken()
	<input type="hidden" asp-for="Id" />
	<button type="submit" class="btn btn-danger">Confirm Delete</button>
	&nbsp;
	<a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
